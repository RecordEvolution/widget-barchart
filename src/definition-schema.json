
{
    "title": "Configure the Bar Chart",
    "type": "object",
    "properties": {
        "settings": {
            "title": "Global Settings",
            "type": "object",
            "properties": {
                "title": {
                    "title": "Title",
                    "type": "string",
                    "order": 1
                },
                "subTitle": {
                    "title": "Subtitle",
                    "type": "string",
                    "order": 2
                },
                "xAxisLabel": {
                    "title": "X-Axis Label",
                    "type": "string",
                    "order": 3
                },
                "yAxisLabel": {
                    "title": "Y-Axis Label",
                    "type": "string",
                    "order": 4
                },
                "horizontal": {
                    "title": "Horizontal Bars",
                    "type": "boolean",
                    "order": 5
                },
                "columnLayout": {
                    "Title": "Vertical Chart Layout",
                    "description": "When multiple charts are drawn, then they will be layed out horizontically or vertically.",
                    "type": "boolean",
                    "order": 6
                }
            }
        },
        "dataseries": {
            "title": "Dataseries",
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "label": {
                        "title": "Label",
                        "description": "The name for this data series",
                        "type": "string",
                        "required": true,
                        "order": 1
                    },
                    "chartName": {
                        "title": "Chart",
                        "description": "If two dataseries have the same 'Chart' name, they will be drawn in the same chart. Otherwise they will get their own chart. If the name ends with #pivot# then a separat chart will be drawn for each pivoted dataseries.",
                        "type": "string",
                        "order": 2
                    },
                    "stack": {
                        "title": "Stack",
                        "description": "To stack series on top of each other within one chart, give them the same stack name.",
                        "type": "string",
                        "order": 3
                    },
                    "barThickness": {
                        "title": "Bar Thickness",
                        "description": "The Thickness of the bar in pixels",
                        "type": "number",
                        "order": 4
                    },
                    "backgroundColor": {
                        "title": "Bar Color",
                        "description": "The inner color of the bars.",
                        "type": "color",
                        "order": 5
                    },
                    "borderColor": {
                        "title": "Border Color",
                        "description": "The border color of the bars.",
                        "type": "color",
                        "order": 6
                    },
                    "borderWidth": {
                        "title": "Border Width",
                        "type": "number",
                        "order": 7
                    },
                    "borderRadius": {
                        "title": "Bar Corner Radius",
                        "description": "Number in pixels for a rounding effect on the bars.",
                        "type": "number",
                        "order": 8
                    },
                    "data": {
                        "title": "Data",
                        "description": "The data used to draw this data series.",
                        "type": "array",
                        "buffersize": 100,
                        "items": {
                            "type": "object",
                            "properties": {
                                "x": {
                                    "type": "string",
                                    "required": true,
                                    "order": 1
                                },
                                "y": {
                                    "type": "number",
                                    "required": true,
                                    "order": 2
                                },
                                "pivot": {
                                    "title": "Pivot Column",
                                    "description": "You can specify a column in the input data to autogenerate dataseries for each distinct entry in this column. E.g. if you have a table with columns [city, timestamp, temperature] and specify 'city' as pivot column, then you will get a line for each city.",
                                    "type": "string",
                                    "order": 3
                                }
                            }
                        }
                    }
                }
            }
        }
    }
}
